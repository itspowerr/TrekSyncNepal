<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trekking.app.controller.PaymentDialogController"
      spacing="20.0" styleClass="card-panel" prefWidth="400.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="titleLabel" text="Process Payment" styleClass="section-title"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Total Amount:" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="amountLabel" text="\$0.00" styleClass="section-title" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Card Number (Simulated):" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField promptText="XXXX XXXX XXXX XXXX" styleClass="form-input" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

        <Label text="Expiry Date:" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField promptText="MM/YY" styleClass="form-input" GridPane.rowIndex="4" GridPane.columnIndex="0"/>

        <Label text="CVC:" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <TextField promptText="123" styleClass="form-input" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>
    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <Button fx:id="cancelButton" text="Cancel" styleClass="button-secondary"/>
        <Button fx:id="payButton" text="Confirm Payment" styleClass="button-primary"/>
    </HBox>
</VBox>