<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trekking.app.controller.TouristRegistrationController" spacing="10.0" styleClass="dashboard-content-panel">
    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
    <Label text="Manage Tourists" styleClass="section-title" />
    <TableView fx:id="touristsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="firstNameCol" prefWidth="120.0" text="First Name" />
            <TableColumn fx:id="lastNameCol" prefWidth="120.0" text="Last Name" />
            <TableColumn fx:id="nationalityCol" prefWidth="100.0" text="Nationality" />
            <TableColumn fx:id="passportCol" prefWidth="150.0" text="Passport No." />
        </columns>
    </TableView>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Button fx:id="addButton" text="Add New Tourist..." styleClass="button-primary" />
        <Button fx:id="editButton" text="Edit Selected..." />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="deleteButton" text="Delete Selected" styleClass="button-secondary" />
    </HBox>
</VBox>