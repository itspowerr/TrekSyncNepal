<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox spacing="20.0" styleClass="dashboard-content-panel" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trekking.app.controller.TouristBookingController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <VBox spacing="20.0" HBox.hgrow="ALWAYS">
            <children>
                <Label text="Request a New Booking" styleClass="section-title" />
                <GridPane hgap="15.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <children>
                        <Label text="Select Attraction" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <ComboBox fx:id="selectAttractionComboBox" maxWidth="Infinity" promptText="Choose an attraction..." styleClass="form-input" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label text="Select Guide" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <ComboBox fx:id="selectGuideComboBox" maxWidth="Infinity" promptText="Choose a guide..." styleClass="form-input" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Label text="Select Start Date" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <DatePicker fx:id="startDatePicker" maxWidth="Infinity" promptText="Choose a date..." styleClass="form-input" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    </children>
                </GridPane>
                <HBox alignment="CENTER_RIGHT">
                    <Button fx:id="submitBookingButton" text="Submit Booking Request" styleClass="login-button" />
                </HBox>
            </children>
        </VBox>

        <VBox fx:id="weatherPanel" alignment="CENTER" minWidth="300.0" spacing="10" styleClass="card-panel, weather-panel" visible="false">
            <Label fx:id="weatherCityLabel" styleClass="section-title" text="Weather in..." />
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <ImageView fx:id="weatherIconView" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" />
                <VBox>
                    <Label fx:id="temperatureLabel" styleClass="temperature-label" text="--°C" />
                    <Label fx:id="weatherDescriptionLabel" styleClass="description-label" text="Loading..." />
                </VBox>
            </HBox>
            <GridPane hgap="10" vgap="3.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
                <children>
                    <Label text="Feels Like:" styleClass="form-label, details-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <Label fx:id="feelsLikeLabel" text="--°C" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    <Label text="Humidity:" styleClass="form-label, details-label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <Label fx:id="humidityLabel" text="--%" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                    <Label text="Wind:" styleClass="form-label, details-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <Label fx:id="windSpeedLabel" text="-- m/s" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                </children>
            </GridPane>
        </VBox>
    </children>
</HBox>