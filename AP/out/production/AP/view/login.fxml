<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trekking.app.controller.LoginController" styleClass="root-login">

    <VBox alignment="CENTER" HBox.hgrow="ALWAYS" styleClass="left-pane">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
        </padding>
        <ImageView fx:id="logoImageView" fitWidth="250" preserveRatio="true" />
    </VBox>

    <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" styleClass="right-pane">
        <padding>
            <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
        </padding>
        <VBox maxWidth="350.0" spacing="10.0">
            <Label styleClass="welcome-title" text="Welcome Back!" />
            <Label styleClass="welcome-subtitle" text="Please enter your details to sign in." />

            <VBox spacing="15.0">
                <padding>
                    <Insets top="20.0" />
                </padding>
                <VBox>
                    <Label text="Username" styleClass="form-label" />
                    <TextField fx:id="usernameField" promptText="Enter Username" styleClass="form-input" />
                </VBox>
                <VBox>
                    <Label text="Password" styleClass="form-label" />
                    <PasswordField fx:id="passwordField" promptText="Enter Password" styleClass="form-input" />
                </VBox>
            </VBox>

            <Button onAction="#handleLoginButtonAction" styleClass="login-button" text="Login" maxWidth="Infinity">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Button>

            <HBox alignment="CENTER" spacing="5.0">
                <padding>
                    <Insets top="15.0" />
                </padding>
                <Label styleClass="register-text" text="Don't have an account?" />
                <Hyperlink onAction="#handleRegisterLinkAction" text="Register here." />
            </HBox>
        </VBox>
    </VBox>

</HBox>