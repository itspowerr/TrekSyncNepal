<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.trekking.app.AdminDashboardController" styleClass="root">
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="header-bar header-padding">
            <Label text="%app.title" styleClass="app-title"/> <!-- Main App Title -->
            <Region HBox.hgrow="ALWAYS"/> <!-- Spacer -->

            <!-- Navigation Buttons (Tabs) -->
            <Button text="%tourists.tab" onAction="#showTouristRegistration" styleClass="nav-button"/>
            <Button text="%guides.tab" onAction="#showGuideRegistration" styleClass="nav-button"/>
            <Button text="%attractions.tab" onAction="#showAttractions" styleClass="nav-button"/>
            <Button text="%booking.tab" onAction="#showBooking" styleClass="nav-button"/>
            <Button text="%emergency.log.tab" onAction="#showEmergencyLog" styleClass="nav-button"/>
            <Button text="%reports.tab" onAction="#showReports" styleClass="nav-button"/>

            <Region HBox.hgrow="ALWAYS"/> <!-- Spacer -->

            <!-- Language and Dark Mode Toggles -->
            <HBox alignment="CENTER" spacing="10">
                <Label text="%language.label" styleClass="options-label" />
                <ChoiceBox fx:id="languageChoice" styleClass="language-choice" />
                <CheckBox fx:id="darkModeToggle" text="%dark.mode.toggle" styleClass="dark-mode-toggle" />
            </HBox>

            <Button text="%logout.button" onAction="#handleLogoutButtonAction" styleClass="button-secondary"/>
        </HBox>
    </top>
    <center>
        <TabPane fx:id="adminTabPane" tabClosingPolicy="UNAVAILABLE" styleClass="dashboard-tab-pane">
            <tabs>
                <Tab text="%tourists.tab" closable="false">
                    <content>
                        <fx:include source="admin-tourist-registration.fxml" />
                    </content>
                </Tab>
                <Tab text="%guides.tab" closable="false">
                    <content>
                        <fx:include source="admin-guide-registration.fxml" />
                    </content>
                </Tab>
                <Tab text="%attractions.tab" closable="false">
                    <content>
                        <fx:include source="admin-attractions.fxml" />
                    </content>
                </Tab>
                <Tab text="%booking.tab" closable="false">
                    <content>
                        <fx:include source="admin-booking.fxml" />
                    </content>
                </Tab>
                <Tab text="%emergency.log.tab" closable="false">
                    <content>
                        <fx:include source="admin-emergency-log.fxml" />
                    </content>
                </Tab>
                <Tab text="%reports.tab" closable="false">
                    <content>
                        <fx:include source="admin-reports.fxml" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
